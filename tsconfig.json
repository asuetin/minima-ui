{
	"compilerOptions": {
		"target": "ES2019",
		"lib": [
			"dom",
			"esnext"
		],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"jsx": "react-jsx",
		"types": [
			"node",
			"jest",
			"@types/testing-library__jest-dom"
		],
		"baseUrl": "./",
		"paths": {
			"components/*": ["src/components/*"],
			"utils/*": ["src/utils/*"],
			"stories/*": ["src/stories/*"]
		},
		"outDir": "dist"
	},
	"include": [
		"src"
	]
}